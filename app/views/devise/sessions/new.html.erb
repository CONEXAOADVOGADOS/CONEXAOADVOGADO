<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: new_user_session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" },
                label_html: { class: "custom-label" },
                wrapper_html: { class: "custom-input-wrapper" },
                input_html: { class: "custom-input" } %>

    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" },
                label_html: { class: "custom-label" },
                wrapper_html: { class: "custom-input-wrapper" },
                input_html: { class: "custom-input" } %>

    <%= f.input :remember_me, as: :boolean, label: false if devise_mapping.rememberable? %>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "custom-button" %>
  </div>
<% end %>
  </div>

<%= render "devise/shared/links" %>
