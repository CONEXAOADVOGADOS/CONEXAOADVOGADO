<%# Web Browser %>
<section class="pt-0">
<div class="bg-home">

	<div class="container position-relative">
		<!-- Bg image -->
		<div class="rounded-3 p-4 p-sm-5" >
			<!-- Banner title -->
        <div class="row justify-content-center align-items-center min-vh-60">
				<div class="col-md-7 col-lg-8 col-xxl-7 pb-5 mb-0 mb-lg-5">
					<h1 class="text-white">Life is an Adventure. Make the best of it.</h1>
					<p class="text-white mb-0">Planning for a trip? We will organize your best trip with the best destination and within the best budgets!</p>
				</div>

			</div>
		</div>

		<!-- Search START -->

  <%= form_with url: experiences_path, method: :get, local: true, class: 'bg-white shadow rounded-3 p-4' do |form| %>
    <div class="row">

      <!--Location -->
      <div class="col-3">
        <%= form.label :location, class: 'h6 fw-normal mb-0' do %>
          <i class="bi bi-geo-alt"></i>Location
        <% end %>
        <div class="form-border-bottom form-control-transparent form-fs-lg mt-2">
          <%= form.select :location, ['São Paulo', 'Rio de Janeiro', 'Fortaleza'], { prompt: 'Select location' }, { class: 'form-select js-choice', data: { search_enabled: 'true' } } %>
        </div>
      </div>

      <!-- Check in -->
      <div class="col-3">
  <%= form.label :date, class: 'h6 fw-normal mb-0' do %>
    <i class="bi bi-calendar"></i>Date
  <% end %>
  <div class="form-border-bottom form-control-transparent form-fs-lg mt-2">
    <%= form.text_field :date, id: 'datepicker', class: 'form-control py-2', placeholder: 'Choose a date' %>
  </div>
</div>


      <!-- Guest -->
      <div class="col-3">
        <%= form.label :category, 'Tour type', class: 'h6 fw-normal mt-2' %>
        <div class="form-border-bottom form-control-transparent form-fs-lg">
          <%= form.select :category, ['Gastronomy', 'Excursion', 'Workshop'], { prompt: 'Select type' }, { class: 'form-select js-choice', data: { search_enabled: 'true' } } %>
        </div>
      </div>

      <!-- Button -->
      <div class="col-3 align-self-end">
        <%= form.submit 'Take a Tour', class: 'btn btn-dark w-100' %>
      </div>

    </div>
  <% end %>
  </div>


</div>



  <div class="container mt-5">
      <!-- Three columns of text below the carousel -->
    <div class="container mt-4">
      <div class="row pt-5 bg-light w-100">
