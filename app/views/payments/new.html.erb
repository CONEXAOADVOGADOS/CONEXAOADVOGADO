<!-- app/views/payments/new.html.erb -->
<div class="container">
  <div class="row py-4">
    <div class="col-md-3">
      <% if @appointment.experience.photo.key %>
        <%= cl_image_tag @appointment.experience.photo.key, class: "card-img-top", width: 300, height: 300, crop: :fill %>
      <% else %>
        <%= image_tag "Logo.png", alt: "Logo My-Welcome", class: "img-card", class: "card-img-top", width: 300, height: 300, crop: :fill %>
      <% end %>
    </div>
    <div class="col">
      <h1>Checkout summary</h1>
      <p>Purchase of <strong><%= @appointment.experience.description %></strong> for <strong><%= number_to_currency(@appointment.amount / 100, unit: 'U$', separator: ",", delimiter: ".") %></strong></p>
      <button id="pay" class="btn btn-primary">Pay</button>
      <script src="https://js.stripe.com/v3/"></script>
      <script>
        const paymentButton = document.getElementById('pay');
        paymentButton.addEventListener('click', () => {
          const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
          stripe.redirectToCheckout({
            sessionId: '<%= @appointment.checkout_session_id %>'
          });
        });
      </script>
    </div>
  </div>
</div>
