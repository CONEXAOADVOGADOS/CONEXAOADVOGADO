
<div class="form-container-create">
  <h1  class="h1-create"style="color: black;">Create an Lawyer</h1>
  <div class="form-wrapper">
    <%= simple_form_for( @lawyer, html: { class: 'new-event-form' } ) do |f| %>
      <div class="row">
        <div class="col-md-6">
          <%= f.input :lawyer_name, label: "Nome do advogado" %>
          <%= f.input :category, collection: ['Previdenciario', 'Trabalhista', 'Penal'], prompt: "Selecione a Especialidade" %>
          <%# <%= f.input :local, collection: ['São Paulo', 'Rio de Janeiro', 'Fortaleza'], prompt: "Selecione a City" %>
        </div>
        <div class="col-md-6">
          <%= f.input :OAB, label_html: { class: 'form-label' }, input_html: { class: 'form-input' } %>
          <%= f.input :phone %>
          <%= f.input :mail%>
          <%= f.input :photo, as: :file %>
        </div>
        <%= f.input :description, as: :text, label_html: { class: 'form-label' }, input_html: { class: 'form-textarea' } %>

        <div class="col-md-12 d-flex flex-column align-items-center"> <!-- Adicione uma nova div para envolver o botão -->
          <%# <%= f.button :submit, "Create Lawyer", class: 'btn btn-success btn-sm', data: { confirm: "Lawyer created successfully", turbo_confirm: "Lawyer created successfully" }, method: :create %>
          <%= f.button :submit, "Create Lawyer", class: 'btn btn-success btn-sm' %>
          <!-- Adicione a classe 'btn-sm' para diminuir o tamanho do botão -->
        </div>
      </div>
    <% end %>
  </div>
</div>
