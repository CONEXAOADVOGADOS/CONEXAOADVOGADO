<div class="container my-5">
  <h1 class="h1-experiences">Experiences</h1>
  <h2 id="excursions" class= "<%= 'd-none' unless @experiences.where("category ILIKE ?", "excursions").any? %>">Excursions</h2>
  <div class="row">
    <% @experiences.where("category ILIKE ?", "excursions").each do |experience| %>
      <div class="col-3">
        <div class="card">
          <% if experience.photo.key %>
            <%= cl_image_tag experience.photo.key, class: "card-img-top" %>
          <% else %>
            <%= image_tag "Logo.png", alt: "Logo My-Welcome", class: "img-card" %>
          <% end %><!-- Display content for Excursions -->

          <p><%= "Experience: #{experience.specialty}" %></p>

          <p><%= experience.description %></p>
          <p><%= experience.local %></p>
          <p><%= experience.date.strftime("%d %B %Y")  %></p>
          <p><%= number_to_currency(experience.price, unit: "U$ ", separator: ",", delimiter: ".") %></p>
        </div>
      </div>
    <% end %>
  </div>

