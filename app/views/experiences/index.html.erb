<div class="container">
  <h1>Experiences</h1>
  <hr>

  <h2 id="excursions">Excursions</h2>
  <div class="row">
    <% @experiences each do |experience| %>
      <div class="col-3">
        <div class="card">
          <!-- Display content for Excursions -->
          <%= experience.category %>
          <%= image_tag "Logo.png", alt: "Logo My-Welcome", class: "w-100 img-card" %>
          <p><%= experience.description %></p>
          <p><%= experience.local %></p>
          <p><%= experience.specialty %></p>
          <p><%= experience.date %></p>
          <p><%= experience.price %></p>
        </div>
      </div>
    <% end %>
  </div>
  <hr>

  <h2 id="gastronomy">Gastronomy<a href="#experiences" class="back-to-top-link"></a></h2>
  <div class="row">
    <% @experiences.each do |experience| %>
      <div class="col-3">
        <div class="card">
          <!-- Display content for Gastronomy -->
          <%= experience.category %>
          <%= image_tag "Logo.png", alt: "Logo My-Welcome", class: "w-100 img-card" %>
          <p><%= experience.description %></p>
          <p><%= experience.local %></p>
          <p><%= experience.specialty %></p>
          <p><%= experience.date %></p>
          <p><%= experience.price %></p>
        </div>
      </div>
    <% end %>
  </div>
  <hr>

  <h2 id="workshops">Workshops</h2>
  <div class="row">
    <% @experiences.each do |experience| %>
      <% if experience.category == "workshop" %>
        <div class="col-3">
          <div class="card">
            <!-- Display content for Workshops -->
            <%= image_tag "Logo.png", alt: "Logo My-Welcome", class: "w-100 img-card" %>
            <p><%= experience.description %></p>
            <p><%= experience.local %></p>
            <p><%= experience.specialty %></p>
            <p><%= experience.date %></p>
            <p><%= experience.price %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <hr>

  <!-- ... (other sections if needed) ... -->

</div>
