<!-- app/views/experiences/index.html.erb -->
<div class="container">
  <h1>Experiences</h1>
<hr>
  <h2 id="excursions">Excursions</h2>

  <div class="row">
      <% while @experience == "Excursion" do %>
      <% @experiences.each do |experience| %>
        <div class="col-3">
          <div class="card">
            <%= experience.category %>
            <%= image_tag "Logo.png", alt: "Logo My-Welcome", class: "w-100 img-card" %>
            <p><%= experience.description %></p>
            <p><%= experience.local %></p>
            <p><%= experience.specialty %></p>
            <p><%= experience.date %></p>
            <p><%= experience.price %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
