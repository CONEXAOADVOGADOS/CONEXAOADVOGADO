    <% @experiences.where("category ILIKE ?", "excursion").each do |experience| %>
      <div class="col-3">
        <div class="card">
          <!-- Display content for Excursions -->
          <%= image_tag "Logo.png", alt: "Logo My-Welcome", class: "w-100 img-card" %>
