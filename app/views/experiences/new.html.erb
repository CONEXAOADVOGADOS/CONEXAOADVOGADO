<div class="form-container">

  <h1>Create New Experience</h1>

  <div class="form-wrapper">

    <%= simple_form_for @experience do |f| %>


    <div class="row">

      <div class="col-md-6">
        <%= f.input :category %>
        <%= f.input :specialty %>
        <%= f.input :local %>
      </div>

      <div class="col-md-6">
        <%= f.input :price %>
        <%= f.input :photo, as: :file %>
      </div>

    </div>

      <!-- bootstrap grid -->

      <%= f.input :description %>

      <div class="actions">
        <%= f.submit "Create", class: "btn btn-primary" %>
      </div>

    <% end %>

  </div>

</div>
